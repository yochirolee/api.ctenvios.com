// Parcel Event Types - Define visibilidad pública/interna
enum ParcelEventType {
    // === PÚBLICOS (Cliente ve) ===
    BILLED // Paquete recibido en agencia
    IN_TRANSIT // En tránsito hacia destino
    ARRIVED_DESTINATION // Arribó al país
    CUSTOMS_PROCESSING // En proceso de aduana
    CUSTOMS_RELEASED // Liberado de aduana
    OUT_FOR_DELIVERY // En camino para entrega
    DELIVERED // Entregado
    DELIVERY_FAILED // Intento de entrega fallido
    DELIVERY_RESCHEDULED // Entrega reprogramada

    // === INTERNOS (Solo staff) ===
    ADDED_TO_PALLET // Agregado a pallet
    REMOVED_FROM_PALLET // Removido de pallet
    ADDED_TO_DISPATCH // Agregado a despacho
    REMOVED_FROM_DISPATCH // Removido de despacho
    RECEIVED_IN_DISPATCH // Recibido en agencia destino
    LOADED_TO_CONTAINER // Cargado en contenedor
    REMOVED_FROM_CONTAINER // Removido de contenedor
    LOADED_TO_FLIGHT // Cargado en vuelo
    REMOVED_FROM_FLIGHT // Removido de vuelo
    MANIFEST_SCANNED // Escaneado en verificación
    WAREHOUSE_RECEIVED // Recibido en almacén carrier
    WAREHOUSE_TRANSFERRED // Transferido entre almacenes
    ASSIGNED_TO_ROUTE // Asignado a ruta de entrega
    ASSIGNED_TO_MESSENGER // Asignado a mensajero

    // === SISTEMA/INCIDENCIAS ===
    DISCREPANCY_FOUND // Discrepancia en manifest
    DISCREPANCY_RESOLVED // Discrepancia resuelta
    ISSUE_REPORTED // Incidencia reportada
    NOTE_ADDED // Nota interna agregada
    STATUS_CORRECTED // Corrección de estado
}

