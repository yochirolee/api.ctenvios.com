model Parcel {
    id              Int           @id @default(autoincrement())
    hbl             String        @unique
    tracking_number String        @unique
    order_id        Int
    order           Order         @relation(fields: [order_id], references: [id])
    weight          Float         @default(0)
    created_at      DateTime      @default(now())
    updated_at      DateTime      @updatedAt
    order_items     OrderItem[]   @relation("ParcelOrderItems")
    events          ParcelEvent[] @relation("ParcelEvents")
}

model ParcelEvent {
    id         Int             @id @default(autoincrement())
    parcel_id  Int
    parcel     Parcel          @relation("ParcelEvents", fields: [parcel_id], references: [id])
    event_type ParcelEventType
    created_at DateTime        @default(now())
    updated_at DateTime        @updatedAt
}

enum ParcelEventType {
    CREATED
    UPDATED
}
